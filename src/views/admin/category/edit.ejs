<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">
       Update Category
    </h1>
    <div>
        <form action="editcategory" method="post">
            <div class="mb-3">
                <label class="form-label">Name Category</label>
                <input type="hidden" value="<%= datas.item._id %>" class="form-control" name="_id" readonly>
                <input type="text" value="<%= datas.item.name %>" class="form-control" name="name" required>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

</div>